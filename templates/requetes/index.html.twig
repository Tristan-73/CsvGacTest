{% extends 'base.html.twig' %}

{% block title %}Hello RequetesController!{% endblock %}

{% block body %}
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid justify-content-start">
            <a href="{{ path('dureeTotalReelleAppels') }}"><button class="btn btn-sm btn-outline-secondary">Durée total réelle des appels aprés le 15/02/2012(inclus).</button></a>
            <a href="{{ path('topDataAbonne') }}"><button class="btn btn-sm btn-outline-secondary">Top 10 des volumes data facturés en dehors de la tranche horaire 8h-18h par abonné.</button></a>
            <a href="{{ path('totalSms') }}"><button class="btn btn-sm btn-outline-secondary">Total sms envoyé par l'ensemble des abonnés.</button></a>
        </div>
    </nav>

    <div class="p-3 mb-2 bg-success text-white">
        {% if tempsTotal is defined %}
            Il y a un total réelle des appels aprés le 15/02/2012(inclus) de {{ tempsTotal }} .
        {% endif %}
        {% if totalSms is defined %}
            Il y eu {{ totalSms }} sms envoyé par l'ensemble des abonnés.
        {% endif %}
    </div>
    {% if TopDataAbonne is defined %}
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th scope="col">Numero Abonné</th>
                <th scope="col">Data facturé n°1 : </th>
                <th scope="col">Data facturé n°2 :</th>
                <th scope="col">Data facturé n°3 :</th>
                <th scope="col">Data facturé n°4 :</th>
                <th scope="col">Data facturé n°5 :</th>
                <th scope="col">Data facturé n°6 :</th>
                <th scope="col">Data facturé n°7 :</th>
                <th scope="col">Data facturé n°8 :</th>
                <th scope="col">Data facturé n°9 :</th>
                <th scope="col">Data facturé n°10 :</th>

            </tr>
            </thead>
        {% for topData in TopDataAbonne %}
            <tbody>
            <tr>
                <th>N°Abonné : {{ topData.abonne }}</th>
                <td>{{ topData.dataFacture.0 }}</td>
                <td>{{ topData.dataFacture.1 }}</td>
                <td>{{ topData.dataFacture.2 }}</td>
                <td>{{ topData.dataFacture.3 }}</td>
                <td>{{ topData.dataFacture.4 }}</td>
                <td>{{ topData.dataFacture.5 }}</td>
                <td>{{ topData.dataFacture.6 }}</td>
                <td>{{ topData.dataFacture.7 }}</td>
                <td>{{ topData.dataFacture.8 }}</td>
                <td>{{ topData.dataFacture.9 }}</td>
            </tr>
            </tbody>
        {% endfor %}
        </table>
    {% endif %}
{% endblock %}
